<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_up"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="400px">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/more_pop_show"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:background="@drawable/show"
                    android:textColor="#0e61aa"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="办展"
                   android:id="@+id/pop_txt_1" />
               </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/more_pop_cate"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:background="@drawable/more_show2"
                    android:textColor="#0e61aa"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="观展" />
            </LinearLayout>


           </LinearLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400px">


            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/more_pop_vr"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:background="@drawable/more_show3"
                    android:textColor="#0e61aa"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VR"
                    android:id="@+id/pop_txt_2" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <Button
                android:id="@+id/more_company"
                android:layout_width="300px"
                android:layout_height="300px"
                android:background="@drawable/more_show4"
                android:textColor="#0e61aa"
                android:textSize="18sp"
                android:layout_alignParentTop="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业文化" />

            </LinearLayout>


        </LinearLayout>

        <Button
          android:background="@drawable/pop_back"
          android:id="@+id/more_pop_return"
          android:layout_width="100px"
          android:layout_height="100px" />
    </LinearLayout>

</RelativeLayout>